{
    "manifest_version": 2,
    "name": "Screen Timer",
    "description": "This extension allows you to set time limits for your kids' web use.",
    "version": "1.0",
    "icons": {
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "notifications"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}